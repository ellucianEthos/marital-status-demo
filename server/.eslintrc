{
	"env": {
		"node": true,
		"mocha": true,
		"jest": true,
		"jasmine": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": [
			"error",
			"always"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"spaced-comment": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"space-in-parens": [
			"error",
			"never"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"object-shorthand": [
			"error",
			"always"
		],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "never",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"curly": [
			"error",
			"all"
		],
		"brace-style": [
			"error",
			"1tbs",
			{
				"allowSingleLine": true
			}
		],
		"space-infix-ops": "error",
		"no-warning-comments": [
			1,
			{
				"terms": [
					"todo"
				],
				"location": "anywhere"
			}
		],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none"
			}
		],
		"no-console": "off"
	}
}